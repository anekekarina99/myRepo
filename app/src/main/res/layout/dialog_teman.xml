<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog" >

    <TextView
        android:text="Hasil Permainan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/comic_san"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pemenang"
        android:text="PEMAIN\nMENANG!"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textAlignment="center"
        android:lineSpacingExtra="-8dp"
        android:fontFamily="@font/comic_san"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/main_lagi"
        android:text="Main Lagi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn_green"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/ke_menu"
        android:text="Kembali Ke Menu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn_orange"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>